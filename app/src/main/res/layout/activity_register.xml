<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.elixer.reemind.LoginActivity"
    android:background="@color/colorPrimary">

    <EditText
        android:id="@+id/displayName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:layout_marginBottom="19dp"
        android:textSize="18sp"
        android:layout_above="@+id/displayPhone"
        android:layout_toEndOf="@+id/textviewName"
        android:textAlignment="center"
        android:layout_alignLeft="@+id/profile_image"
        android:layout_alignStart="@+id/profile_image" />

    <TextView
        android:text="Phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/inputCountryCode"
        android:layout_alignBottom="@+id/inputCountryCode"
        android:layout_alignLeft="@+id/textviewName"
        android:layout_alignStart="@+id/textviewName"
        android:paddingLeft="30dp" />

    <EditText
        android:id="@+id/displayPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="10 Digit Number"
        android:inputType="textPassword|phone"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:selectAllOnFocus="false"
        android:textAlignment="center"

        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/button_profilepicture"
        android:layout_alignStart="@+id/button_profilepicture" />

    <EditText
        android:id="@+id/inputCountryCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Code"
        android:inputType="textPassword|phone"
        android:textColorHint="@android:color/white"
        android:selectAllOnFocus="false"
        android:textColor="@android:color/white"
        android:layout_weight="0.03"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/displayPhone"
        android:layout_toLeftOf="@+id/displayPhone"
        android:layout_toStartOf="@+id/displayPhone"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp" />

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="Register"
        android:textColor="@android:color/black"
        android:layout_below="@+id/progressBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="58dp" />

    <ImageButton
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/camsmlller"
        android:id="@+id/button_profilepicture"
        android:elevation="4dp"
        android:layout_marginLeft="92dp"
        android:layout_marginStart="92dp"
        android:layout_above="@+id/displayName"
        android:layout_alignLeft="@+id/profile_image"
        android:layout_alignStart="@+id/profile_image" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:visibility="visible"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/displayPhone"
        android:layout_toLeftOf="@+id/displayPhone"
        android:layout_toStartOf="@+id/displayPhone" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textviewName"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:paddingLeft="30dp"
        android:layout_alignBottom="@+id/displayName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/profileb"
        app:civ_border_width="0dp"
        app:civ_border_color="#FF000000"
        android:elevation="0dp"
        android:layout_above="@+id/displayName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

</RelativeLayout>
