<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.admin.import2.LoginActivity"
    android:background="@color/colorPrimary">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="Register"
        android:textColor="@android:color/black"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/progressBar"
        android:layout_toEndOf="@+id/progressBar"
        android:layout_marginBottom="142dp" />

    <EditText
        android:id="@+id/displayPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="10 Digit Number"
        android:inputType="textPassword|phone"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:selectAllOnFocus="false"
        android:layout_marginLeft="200dp"
        android:layout_marginStart="200dp"
        android:textAlignment="center"
        android:layout_centerVertical="true"

        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />

    <EditText
        android:id="@+id/displayName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:layout_marginBottom="19dp"
        android:textSize="18sp"
        android:layout_above="@+id/displayPhone"
        android:layout_toEndOf="@+id/textviewName"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:textAlignment="center"
        />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textviewName"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_alignBaseline="@+id/displayName"
        android:layout_alignBottom="@+id/displayName"
        android:layout_toRightOf="@+id/progressBar"
        android:layout_toEndOf="@+id/progressBar" />

    <TextView
        android:text="Phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/inputCountryCode"
        android:layout_alignBottom="@+id/inputCountryCode"
        android:layout_alignLeft="@+id/textviewName"
        android:layout_alignStart="@+id/textviewName" />

    <EditText
        android:id="@+id/inputCountryCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CountryCode"
        android:inputType="textPassword|phone"
        android:textColorHint="@android:color/white"
        android:selectAllOnFocus="false"
        android:textColor="@android:color/white"
        android:layout_weight="0.03"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/displayPhone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="120dp"
        android:layout_marginStart="120dp"
        android:layout_marginRight="180dp"
        android:layout_marginEnd="180dp" />

    <TextView
        android:text="Build Profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textAlignment="center"
        android:layout_below="@+id/progressBar"
        android:layout_toRightOf="@+id/progressBar"
        android:layout_toEndOf="@+id/progressBar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_profilepicture"
        android:drawableTop="@drawable/camera"
        android:scrollHorizontally="false"
        android:includeFontPadding="false"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingLeft="0dp"
        android:layout_above="@+id/displayName"
        android:layout_alignLeft="@+id/displayPhone"
        android:layout_alignStart="@+id/displayPhone"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/profile"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_marginBottom="22dp"
        android:layout_above="@+id/displayName"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
