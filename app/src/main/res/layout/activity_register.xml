<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.admin.import2.LoginActivity"
    android:background="@color/colorPrimary">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="Register"
        android:textColor="@android:color/black"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/progressBar"
        android:layout_toEndOf="@+id/progressBar"
        android:layout_marginBottom="142dp" />

    <EditText
        android:id="@+id/displayName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:layout_marginBottom="19dp"
        android:textSize="18sp"
        android:layout_above="@+id/displayPhone"
        android:layout_toEndOf="@+id/textviewName"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:textAlignment="center"
        />

    <TextView
        android:text="Phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/inputCountryCode"
        android:layout_alignBottom="@+id/inputCountryCode"
        android:layout_alignLeft="@+id/textviewName"
        android:layout_alignStart="@+id/textviewName" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/profile"
        app:civ_border_width="1dp"
        app:civ_border_color="#FF000000"
        android:layout_marginBottom="22dp"
        android:layout_above="@+id/displayName"
        android:layout_centerHorizontal="true"
        android:elevation="0dp" />

    <EditText
        android:id="@+id/inputCountryCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="CountryCode"
        android:inputType="textPassword|phone"
        android:textColorHint="@android:color/white"
        android:selectAllOnFocus="false"
        android:textColor="@android:color/white"
        android:layout_weight="0.03"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/displayPhone"
        android:layout_alignLeft="@+id/displayName"
        android:layout_alignStart="@+id/displayName" />

    <EditText
        android:id="@+id/displayPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="10 Digit Number"
        android:inputType="textPassword|phone"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:selectAllOnFocus="false"
        android:textAlignment="center"

        android:layout_marginRight="38dp"
        android:layout_marginEnd="38dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/camera"
        android:id="@+id/button_profilepicture"
        android:layout_alignBottom="@+id/profile_image"
        android:layout_alignRight="@+id/profile_image"
        android:layout_alignEnd="@+id/profile_image"
        android:elevation="0dp" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textviewName"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_alignBaseline="@+id/displayName"
        android:layout_alignBottom="@+id/displayName"
        android:layout_toRightOf="@+id/progressBar"
        android:layout_toEndOf="@+id/progressBar" />

</RelativeLayout>
