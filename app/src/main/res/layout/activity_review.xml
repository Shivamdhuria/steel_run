<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_review"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.import2.ReviewActivity"
    android:background="@color/colorPrimary">>


    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="Register"
        android:textColor="@android:color/black"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/progressBar"
        android:layout_toEndOf="@+id/progressBar"
        android:layout_marginBottom="142dp" />

    <TextView
        android:text="Build Profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textAlignment="center"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/progressBar"
        android:layout_toRightOf="@+id/progressBar"
        android:layout_toEndOf="@+id/progressBar" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textviewName"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_alignBaseline="@+id/displayName"
        android:layout_alignBottom="@+id/displayName"
        android:layout_toRightOf="@+id/progressBar"
        android:layout_toEndOf="@+id/progressBar" />

    <TextView
        android:text="Phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/displayPhone"
        android:layout_alignBottom="@+id/displayPhone"
        android:layout_alignLeft="@+id/textviewName"
        android:layout_alignStart="@+id/textviewName" />

    <EditText
        android:id="@+id/displayName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:layout_marginBottom="18dp"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_above="@+id/displayPhone"
        android:layout_marginStart="90dp" />

    <EditText
        android:id="@+id/displayPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="10 Digit Number"
        android:inputType="textPassword|phone"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:selectAllOnFocus="false"
        android:textAlignment="center"

        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp" />

</RelativeLayout>
