<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:padding="16dp"
    android:weightSum="1"
    android:layout_height="250dp">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="5dp"
        card_view:cardBackgroundColor="#FBF7DB"
        android:id="@+id/cv"
        android:paddingRight="0dp"
        android:layout_height="212dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:padding="16dp"
            android:layout_height="223dp">


            <Button
                android:text="Done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_confirm"
                android:elevation="4dp"
                android:textColor="@color/common_google_signin_btn_text_light_pressed"
                android:textColorHint="@color/common_google_signin_btn_text_light_pressed"
                android:textColorHighlight="@color/common_google_signin_btn_text_light_pressed"
                android:background="@color/common_google_signin_btn_text_dark_default"
                style="@style/Widget.AppCompat.Button"
                android:includeFontPadding="false"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="6.50 P.M"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reminderTime"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/name"


                android:text="Joshua"
                android:layout_height="94dp"
                android:textAlignment="center"
                android:layout_alignRight="@+id/reminderDate"
                android:layout_alignEnd="@+id/reminderDate"
                android:layout_above="@+id/reminderDate"
                android:layout_below="@+id/text"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="normal|bold" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/receiver_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/profileb"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"
                android:elevation="7dp"
                android:layout_below="@+id/reminderTime"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                card_view:civ_border_color="@color/colorPrimary"
                card_view:civ_border_width="0dp" />

            <TextView
                android:layout_height="105dp"
                android:id="@+id/text"

                android:textSize="20sp"
                android:text="Your reminder message will appear here"
                android:layout_width="200dp"
                android:paddingLeft="15dp"
                android:layout_below="@+id/reminderTime"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingTop="20dp"
                android:textStyle="normal|italic" />

            <TextView
                android:text="26/12/2017"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reminderDate"
                android:textAlignment="center"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/receiver_image"
                android:layout_alignEnd="@+id/receiver_image" />

            <Button
                android:text="Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_reject"
                style="@style/Widget.AppCompat.Button"
                android:background="@color/cardview_light_background"
                android:textColor="@color/btn_logut_bg"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>