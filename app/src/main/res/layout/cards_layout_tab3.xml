<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:padding="16dp"
    android:weightSum="1"
    android:layout_height="230dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="202dp"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="5dp"
        card_view:cardBackgroundColor="#FBF7DB"
        android:id="@+id/cv"
        android:paddingRight="0dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:padding="0dp"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="200dp"
                android:layout_height="105dp"
                android:id="@+id/responseText"

                android:textSize="20sp"
                android:text="Your reminder message will appear here"
                android:layout_marginTop="22dp"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/button_remove"
                android:layout_alignStart="@+id/button_remove" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/receiver_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/profile"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"
                android:elevation="7dp"
                android:layout_alignTop="@+id/responseText"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="19dp"
                android:layout_marginEnd="19dp" />

            <TextView
                android:text="receiverName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/receiverName"
                android:textStyle="normal|bold"
                android:layout_alignLeft="@+id/receiver_image"
                android:layout_alignStart="@+id/receiver_image"
                android:layout_above="@+id/status"
                android:layout_below="@+id/responseText"
                android:layout_alignRight="@+id/receiver_image"
                android:layout_alignEnd="@+id/receiver_image"
                android:textAlignment="center" />

            <Button
                android:text="Remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_remove"
                style="@style/Widget.AppCompat.Button"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/status"
                 android:text="Status"
                android:layout_height="30dp"
                android:textAlignment="textEnd"
                android:paddingRight="5dp"
                android:layout_alignBottom="@+id/button_remove"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingTop="5dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>